<div>
  <div class="nav prev">
    <img src="/images/nav-prev.png" alt="prev">
  </div>
  <figure>
    <img src="/images/{{image}}" alt="selected-item">
  </figure>
  <article>
    <a class="close" href="/">+</a>
    <h1>{{name}}</h1>
    <p>{{description}}</p>
    <footer data-id={{id}}>
      <h2>${{price}}</h2>
      <a class="add_cart" href="#">Add to cart</a>
    </footer>
  </article>
  <aside>
    <h3>Nutritional Information</h3>
    <table data-id={{id}}>
      <tbody>
        {{#with stats}}
          <tr>
            <td>Protein</td>
            <td>{{protein}}</td>
          </tr>
          <tr>
            <td>Fat (total)</td>
            <td>{{fat}}</td>
          </tr>
          <tr>
            <td>Carbohydrate</td>
            <td>{{carbohydrate}}</td>
          </tr>
          <tr>
            <td>Energy (kj)</td>
            <td>{{energy}}</td>
          </tr>
          <tr>
            <td>Energy (kcal)</td>
            <td>{{sugar}}</td>
          </tr>
          <tr>
            <td>Sugar</td>
            <td>0.3738</td>
          </tr>
        {{/with}}
      </tbody>
    </table>
  </aside>
  <div class="nav next">
    <img src="/images/nav-next.png" alt="next">
  </div>
</div>