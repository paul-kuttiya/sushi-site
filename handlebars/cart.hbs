<ul>
  {{#each this}}
    <li data-id="{{id}}">
      <figure>
        <img src="/images/{{image}}" alt="cart-item">
      </figure>
      <p>{{quantity}} x ${{price}}</p>
    </li>
  {{/each}}
</ul>
<section>
  <h3>Your<br>shopping cart</h3>
  {{!--<p class="total">${{total this.items}}</p>--}}
  <p class="total">${{total this}}</p>
  <p></p>
  <footer>
    <a class="left empty_cart" href="#">Empty cart</a><!--
    --><a class="right checkout" href="/checkout">Checkout</a>
  </footer>
</section>
